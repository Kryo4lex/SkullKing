<Window x:Class="SkullKingClientUI.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Skull King"
        Width="1600" Height="900"
        MinWidth="320" MinHeight="180"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#111"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <Grid>
        <!-- Lock design surface to 16:9 and scale -->
        <Viewbox Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid Width="1600" Height="900" Background="#101418">
                <Grid Margin="24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="{Binding LeftColumnWidth,   RelativeSource={RelativeSource AncestorType=Window}}"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="{Binding MiddleColumnWidth, RelativeSource={RelativeSource AncestorType=Window}}"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="{Binding RightColumnWidth,  RelativeSource={RelativeSource AncestorType=Window}}"/>
                    </Grid.ColumnDefinitions>

                    <!-- ========== LEFT: Points ========== -->
                    <Border Grid.Column="0" Background="#1E2530" CornerRadius="12" Padding="12">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Points" Foreground="#BFD6FF"
                                       FontSize="18" FontWeight="SemiBold" Margin="4,0,0,8"/>

                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding Players}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="0,0,0,16">
                                                <Border Background="#2A3342" CornerRadius="8" Padding="10">
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding Name}" FontSize="20"
                                                                   FontWeight="Bold" Foreground="White"/>
                                                        <TextBlock>
                                                            <Run Text="Total: " Foreground="#BFD6FF"/>
                                                            <Run Text="{Binding TotalScore}"
                                                                 Foreground="#FFD966" FontWeight="SemiBold"/>
                                                            <Run Text=" pts" Foreground="#BFD6FF"/>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </Border>

                                                <DataGrid ItemsSource="{Binding Rounds}"
                                                          AutoGenerateColumns="False"
                                                          CanUserAddRows="False" CanUserDeleteRows="False"
                                                          HeadersVisibility="Column" GridLinesVisibility="None"
                                                          IsReadOnly="True" RowHeaderWidth="0"
                                                          Margin="0,6,0,0" Background="Transparent"
                                                          Foreground="White" BorderThickness="0"
                                                          FontSize="14" EnableRowVirtualization="True"
                                                          EnableColumnVirtualization="True">
                                                    <DataGrid.Resources>
                                                        <Style TargetType="DataGridRow">
                                                            <Setter Property="Background" Value="#223"/>
                                                            <Setter Property="Margin" Value="0,1,0,1"/>
                                                        </Style>
                                                        <Style TargetType="DataGridCell">
                                                            <Setter Property="BorderThickness" Value="0"/>
                                                            <Setter Property="Padding" Value="6,2"/>
                                                        </Style>
                                                        <Style TargetType="DataGridColumnHeader">
                                                            <Setter Property="Background" Value="#1A2230"/>
                                                            <Setter Property="Foreground" Value="#BFD6FF"/>
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                            <Setter Property="Padding" Value="6,2"/>
                                                        </Style>
                                                    </DataGrid.Resources>
                                                    <DataGrid.Columns>
                                                        <DataGridTextColumn Header="Rnd"   Binding="{Binding Round}"    Width="50"/>
                                                        <DataGridTextColumn Header="Pred"  Binding="{Binding Predicted}" Width="60"/>
                                                        <DataGridTextColumn Header="Act"   Binding="{Binding Actual}"    Width="60"/>
                                                        <DataGridTextColumn Header="Bonus" Binding="{Binding Bonus}"     Width="80"/>
                                                    </DataGrid.Columns>
                                                </DataGrid>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>

                    <!-- ========== MIDDLE: Trick ========== -->
                    <Border Grid.Column="2" CornerRadius="12" Background="#17202A" Padding="12">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Header + round info -->
                            <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,8">
                                <TextBlock Text="Trick" Foreground="#BFD6FF"
                                           FontSize="18" FontWeight="SemiBold"
                                           Margin="4,0,0,0" DockPanel.Dock="Left"/>
                                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Margin="0,0,4,0">
                                    <TextBlock Text="{Binding CurrentRoundText}" Foreground="#BFD6FF" Margin="0,0,12,0"/>
                                    <TextBlock Text="{Binding SubRoundText}"     Foreground="#BFD6FF"/>
                                </StackPanel>
                            </DockPanel>

                            <!-- Cards in play: per player slot -->
                            <ItemsControl x:Name="CardsBoard" Grid.Row="1" ItemsSource="{Binding Players}"
                                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <ItemsControl.ItemContainerStyle>
                                    <Style TargetType="ContentPresenter">
                                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                        <Setter Property="VerticalAlignment" Value="Stretch"/>
                                    </Style>
                                </ItemsControl.ItemContainerStyle>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <!-- Rows/Cols set in code-behind based on player count -->
                                        <UniformGrid/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="8"
                                                Background="#0E141B"
                                                CornerRadius="10"
                                                Padding="8"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch"
                                                SnapsToDevicePixels="True"
                                                ClipToBounds="True">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Row="0" Text="{Binding Name}"
                                                           Foreground="#BFD6FF" FontWeight="SemiBold"
                                                           HorizontalAlignment="Center" Margin="0,0,0,6"/>

                                                <Border Grid.Row="1" CornerRadius="10" Background="#0A0F15" Padding="8" ClipToBounds="True">
                                                    <Grid>
                                                        <Image x:Name="CardImage"
                                                               Stretch="Uniform"
                                                               HorizontalAlignment="Stretch"
                                                               VerticalAlignment="Stretch"
                                                               Source="{Binding CardInPlay.Image}"
                                                               RenderOptions.BitmapScalingMode="HighQuality"/>
                                                        <TextBlock Text="Waiting..."
                                                                   Foreground="#9EB0C6" FontStyle="Italic"
                                                                   HorizontalAlignment="Center" VerticalAlignment="Center">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding CardInPlay}" Value="{x:Null}">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding ElementName=CardImage, Path=Source}" Value="{x:Null}">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Grid>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Read-only message -->
                            <TextBox Grid.Row="2"
                                     Text="{Binding TrickMessage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Foreground="White" Background="#0E141B" BorderBrush="#2A3342"
                                     Padding="6" MinHeight="36" VerticalContentAlignment="Center"
                                     IsReadOnly="True" IsReadOnlyCaretVisible="False"
                                     Focusable="False" IsTabStop="False" />
                        </Grid>
                    </Border>

                    <!-- ========== RIGHT: Hand (current player) ========== -->
                    <Border Grid.Column="4" CornerRadius="12" Background="#1A232E" Padding="12">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Hand" Foreground="#BFD6FF"
                                       FontSize="18" FontWeight="SemiBold" Margin="4,0,0,8"/>

                            <!-- No ScrollViewer: UniformGrid gets finite size and fits all cards -->
                            <ItemsControl x:Name="HandBoard" Grid.Row="1" ItemsSource="{Binding CurrentHand}"
                                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <ItemsControl.ItemContainerStyle>
                                    <Style TargetType="ContentPresenter">
                                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                        <Setter Property="VerticalAlignment" Value="Stretch"/>
                                    </Style>
                                </ItemsControl.ItemContainerStyle>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <!-- Rows/Cols set in code-behind from count -->
                                        <UniformGrid/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="6" Background="#0A0F15" CornerRadius="8" Padding="6"
                                                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ClipToBounds="True">
                                            <!-- Guarantees fit inside each cell -->
                                            <Viewbox Stretch="Uniform" StretchDirection="DownOnly">
                                                <Image Source="{Binding Image}"
                                                       RenderOptions.BitmapScalingMode="HighQuality"
                                                       SnapsToDevicePixels="True"/>
                                            </Viewbox>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Viewbox>
    </Grid>
</Window>
